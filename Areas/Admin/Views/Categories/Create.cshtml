@model TbCategory
<br />
<br />
<br />
<br />
<br />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9">
                <div class="card card-info">
                    <div class="card-header">
                        <h3>@ViewBag.state</h3>
                        <a asp-controller="Products" asp-area="Admin" asp-action="Create" class="btn btn-primary" style="margin-left:83%">Add Product</a>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" role="form" enctype="multipart/form-data" class="form-horizontal">
                        <div class="card-body">
                            @if (ViewBag.state == "Edit Product")
                            {
                                <input type="hidden" asp-for="CategoryId" />
                            }
                            <div class="form-group row">
                                <label asp-for="CategoryName" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="CategoryName" class="form-control" placeholder="Category Name">
                                    <span asp-validation-for="CategoryName"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" asp-area="Admin" asp-controller="Categories" asp-action="Create" class="btn btn-info">@ViewBag.enter</button>
                            <a asp-action="Index" class="btn btn-primary" style="margin-left:78%">Back to List</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<br />
<br />
<br />
@section Scripts{
    <script src="~/adminpanel/dist/js/adminlte.js"></script>
    <script src="~/adminpanel/dist/js/adminlte.min.js"></script>
    <script src="~/adminpanel/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/adminpanel/plugins/jquery-validation/jquery.validate.min.js"></script>
}
